.pay{
  background: #f7f7f7;
  min-height: 100vh;
}
.p-head{
  padding: 15px;
  font-size: 32rpx;
  background: #fff;
}
.p-head image{
  width: 20px;
  height: 20px;
  float: right;
}
.p-price{
  width: 100%;
  height: 120px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.p-price view{
  color: #04a9a3;
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 10px;
}
.p-price text{
  font-size: 30rpx;
}
.p-detail{
  padding: 0 15px;
  background: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  color: #a8a8a8;
  margin-bottom: 15px;
}
.pd-list{
  padding: 10px 0;
  border-bottom: 1px dotted #d7d7d7;
  font-size: 28rpx;
}
.pd-list:last-child{
  border: 0;
}
.pd-list text{
  color: #000;
  float: right;
}
.p-protocol{
  background: #fff;
  padding: 10px 15px;
}
.p-protocol label{
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
checkbox .wx-checkbox-input{
  width: 19px;
  height: 19px;
  margin-right: 15px;
}
.p-banner{
  padding: 12px 15px;
}
.p-banner image{
  height: 80px;
  margin-bottom: 5px;
}
.p-banner text{
  font-size: 26rpx;
  color: #a8a8a8;
}
.pay-modes{
  background: #fff;
}
.pay-modes label{
  padding: 5px 15px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.pay-mode{
  display: flex;
  align-items: center;
}
.pay-mode image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 5px;
}
.pay-mode text{
  font-size: 26rpx;
}
.goPay{
  padding: 15px;
}
.goPay button{
  background: #04a9a3;
  color: #fff;
}
.goPay .button-hover {
  background-color: rgba(4, 169, 163, 0.7);
}