.ordetail{
 background: #f7f7f7;
  min-height: 100vh;
}
.odt-head{
  padding: 10px 15px;
  display: flex;
  align-items: flex-start;
  background: #fff;
  margin-bottom: 15px;
}
.odt-head>image{
  width: 13vw;
  height: 13vw;
  border-radius: 50%;
  margin-right: 2vw;
}
.oh-dt>view{
  font-size: 36rpx;
}
.oh-dt{
  flex: 1;
}
.oh-price{
  display: flex;
  align-items: center;
}
.oh-line{
  border-top: 1px dotted #b8b8b8;
  flex: 1;
}
.oh-price text{
  padding: 2px 20px;
  background: #00c666;
  color: #fff;
  border-radius: 20px;
}
.oh-dt>text{
  color: #00c666;
}
.odt-info{
  background: #fff;
  padding: 0 30rpx;
}
.oi-head{
  font-size: 36rpx;
  border-bottom: 1px solid #e8e8e8;
  padding: 16rpx 0;
}
.oi-dt{
  padding: 15px 0;
}
.oi-dt view{
  font-size: 32rpx;
  color: #707070;
  margin-bottom: 20rpx;
}
.oi-dt view:last-child{
  margin-bottom: 0;
}
.oi-dt view text{
  width: 7em;
  display: inline-block;
}