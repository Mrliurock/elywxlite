/*授权码激活*/
.codeActive{
  width: 100%;
  height: 200px;
  position: fixed;
  top:0;
  left: 0;
  z-index: 2000;
  background: #fff;
}
.ca-head{
  padding: 10px;
  font-size: 28rpx;
  border-bottom: 1px solid #ddd;
}
.ca-main{
  margin: 0 auto;
  width: 76vw;
  padding-top: 10px;
}
.ca-input{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.ca-input input{
  padding: 5px 10px;
  font-size: 30rpx;
  width: 48vw;
  background-color: #e6f6f6;
}
.bt-code{
  background-color: #04a9a3;
  color: #fff;
  font-size: 30rpx;
  padding-bottom:5px;
  padding-top: 5px;
  line-height: 1.4rem;
  width: 20vw;
  text-align: center;
  border-radius:2px; 
}
.ca-text{
  margin-top:10px;
  font-size: 28rpx;
  padding-left: 5px;
}
.ca-text text{
  color: #42b5b0;
}
.ca-buy{
  display: flex;
  align-items: center;
  justify-content:flex-start;
  padding-left: 5px;
  font-size: 28rpx;
  margin-top: 30px;
  color: #686868;
}
.ca-buy>view{
  padding: 5px 8px;
  background-color: #e1f5f4;
  color: #04a9a3;
  border: 1px solid #04a9a3;
  margin-left: 20px;
  font-size: 30rpx;
  border-radius: 3px;
}
.ca-test{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.ca-msg{
  display: flex;
  align-items: center;
  margin:40px 0;
}
.ca-msg>image,.ca-msg>icon{
  margin-right: 20px;
}
.ca-msg>image{
  width: 60rpx;
  height: 60rpx;
}