/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
} 
.container image {
  display: block;
  width: 100%;
}
.container swiper {
  width: 100%;
  height: 420rpx;
  position: relative;
  margin-top: 60rpx;
}
view{
  box-sizing: border-box;
  font-size: 32rpx;
}
image{
  width: 100%;
  display: block;
}
input {
display:block;
text-overflow:clip;
overflow:hidden;
white-space:nowrap;
font-family:UICTFontTextStyleBody;
}
::-webkit-scrollbar{
  display: none;
}
.show{
  display: block!important;
}
.of{
  overflow: hidden;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  background: #04a9a3!important;
}
/* 模态框样式 */
.model {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.wx-slider-handle{
  width: 15px!important;
  height: 15px!important;
  margin-top: -7.5px!important;
  background-color: #04a9a3!important;
}
